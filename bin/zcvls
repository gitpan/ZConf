use strict;
use warnings;
use Getopt::Std;
use ZConf;

$Getopt::Std::STANDARD_HELP_VERSION = 1;

#version function
sub main::VERSION_MESSAGE {
	print "zcvls 1.0.0\n";
}

#print help
sub main::HELP_MESSAGE {
	print "\n".
	      "-c <config>  The config to operate on.\n".
		  "-C  Search comments.\n".
		  "-s <set>  The set to operate on.\n".
		  "-m  Search meta.\n".
		  "-S (0|1)  Enable sys mode.\n";
}

#print the vars
sub varprint{
	my %hash=%{$_[0]};
	my $sechash=$_[1];
	my $sectype=$_[2];

	my @vars=keys(%hash);

	@vars=sort(@vars);

	my $varsInt=0;
	while (defined( $vars[$varsInt] )) {
		if ($sechash) {
			#it is a meta/comment
			my @seckeys=keys( %{ $hash{$vars[$varsInt]} } );

			@seckeys=sort(@seckeys);

			#process stuff in the secondary hash
			my $seckeysInt=0;
			while (defined( $seckeys[$seckeysInt] )) {
				#it is a regular var
				print $sectype.$vars[$varsInt].'='.$seckeys[$seckeysInt]."\n";
					
				$seckeysInt++;
			}
		}else {
			#it is a regular var
			print $vars[$varsInt]."\n";
		}

		$varsInt++;
	}

}

#gets the options
my %opts=();
getopts('s:c:CS:m', \%opts);

#makes sure that -c is set
if (!defined($opts{c})) {
	warn('zcget: -c not defined');
	exit 254;
}

#inits zconf
my $zconf = ZConf->new({sys=>$opts{S}});
if($zconf->{error}){
	exit $zconf->{error};
}

#sets up the arguement hash that will be passed for reading it
my %args;
$args{config}=$opts{c};
#if a set is specified, set it
if (defined($opts{s})) {
	$args{set}=$opts{s};
}

#reads it
$zconf->read(\%args);
if(defined($zconf->{error})){
	exit $zconf->{error};
}

#handle it if it is a comment search
my %hash;
my $sechash=undef;
my $sectype='';
if (defined($opts{C})) {
	%hash=$zconf->regexCommentGet({
								   config=>$opts{c},
								   varRegex=>'.',
								   commentRegex=>'.'
								   });
	if(defined($zconf->{error})){
		exit $zconf->{error};
	}
	$sechash=1;
	my $sectype='##';
}else {
	#handle it if it is a comment search
	if (defined($opts{m})) {
		%hash=$zconf->regexMetaGet({
								   config=>$opts{c},
								   varRegex=>'.',
								   metaRegex=>'.'
								   });
		if(defined($zconf->{error})){
			exit $zconf->{error};
		}
		$sechash=1;
		my $sectype='#!';
	}else {
		%hash=$zconf->regexVarGet($opts{c}, '.');
		if(defined($zconf->{error})){
			exit $zconf->{error};
		}
		$sechash=0;		
	}
}

varprint(\%hash, $sechash, $sectype, 1);

=head1 NAME

zcvls - List keys for a config.

=head1 SYNOPSIS

zcvls [B<-S> (0|1)] [B<-s> <set>] B<-c> <config>

zcvls [B<-S> (0|1)] [B<-s> <set>] B<-C> B<-c> <config>

zcvls [B<-S> (0|1)] [B<-s> <set>] B<-m> B<-c> <config>

=head1 SWTICHES

=head2 -c <config>

This is the configuration to operate on.

=head2 -C

List comments.

=head2 -m

List metas.

=head2 -s <set>

The set to operate on. This is the only optional switch. If it is now defined,
The choosen/default config will be used.

=head2 -S (0|1)

If set to true, this will enable system mode.

=head1 EXIT CODES

Any error codes not specified below are ZConf error codes.

=head2 254

Invalid usage of some sort.

