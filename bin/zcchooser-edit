use strict;
use warnings;
use Getopt::Std;
use ZConf;

$Getopt::Std::STANDARD_HELP_VERSION = 1;

#version function
sub main::VERSION_MESSAGE {
	print "zcchooserr-edit 0.0.0\n";
}

#print help
sub main::HELP_MESSAGE {
	print "\n".
	      "-c <config>  The config to operate on.\n";
}

#gets the options
my %opts=();
getopts('c:', \%opts);

#makes sure that -c is set
if (!defined($opts{c})) {
	warn('zcchooser-edit: -c not defined');
	exit 254;
}

#inits zconf
my $zconf = ZConf->new();
if($zconf->{error}){
	exit $zconf->{error};
}

#sets up the arguement hash that will be passed for reading it
my %args;
$args{config}=$opts{c};
#if a set is specified, set it
if (defined($opts{s})) {
	$args{set}=$opts{s};
}

#gets the chooser
my $chooser=$zconf->readChooser($opts{c});
if($zconf->{error}){
	exit $zconf->{error};
}

#writes the chooser out
my $file='/tmp/'.rand().rand().rand().rand();
open(CHOOSERWRITE, '>', $file);
print CHOOSERWRITE $chooser;
close(CHOOSERWRITE);

#edit it
system($ENV{EDITOR}, $file);

#reads it
open(CHOOSERREAD, '<', $file);
$chooser=join('', <CHOOSERREAD>);
close(CHOOSERREAD);

#removes it
unlink($file);

#sets it
$zconf->writeChooser($opts{c}, $chooser);
if($zconf->{error}){
	exit $zconf->{error};
}

=head1 NAME

zcchooser-edit - This invokes $ENV{EDITOR} for editing the chooser.

=head1 SYNOPSIS

zcchooser-edit B<-c> <config>

=head1 SWTICHES

=head2 -c <config>

This is the configuration to operate on.

=head1 EXIT CODES

Unless specified below, any exit code matches the ZConf error set.

=head2 254

No config specified.

